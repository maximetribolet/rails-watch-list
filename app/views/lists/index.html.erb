<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-black">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js"></h3>
  </div>
</div><div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/dicpef1tv/image/upload/v1668785250/jeremy-yap-J39X2xX_8CQ-unsplash_mqieh7.jpg);">
  <div class="container">
    <h1 class="d-flex justify-content-center">Movie Lists</h1>
  </div>
</div>

<div class="container py-5">
<%= image_tag "", class: 'movie-img rounded-top', width: 1000, crop: :fill%>

</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-dangerous btn-rounded' %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 colsm-6 col-md-4">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
            <li><%= list.name %> <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, list_path(list), data: {turbo_method: :delete} %></li>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
